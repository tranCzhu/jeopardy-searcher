    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Jeopardy Searcher</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="/css/results.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-transparent">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav ml-auto" style="margin-right: 40px;">
                        <li class="nav-item">
                            <a class="nav-link btn-outline-light" href="/" style="margin-right: 15px;">Home</a>
                        </li>
                    </ul>
                </div>
        </nav>
        <!-- display by category-->
        <div class="btn-group">
            <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Display by Category
            </button>
            <div class="dropdown-menu">
                <li class="dropdown-item" id="allCat">all categories</li>
                <div class="dropdown-divider"></div>
                <% if (categories.length > 0) {%>
                    <% categories.forEach(function(category) { %>
                        <li class="dropdown-item categories"><%= category %></li>
                    <% }); %>
                <% } %>
            </div>
        </div>

        <!-- display by value -->
        <div class="btn-group">
            <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Display by Value
            </button>
            <div class="dropdown-menu">
                <li class="dropdown-item" id="allVal">all values</li>
                <div class="dropdown-divider"></div>
                <% if (values.length > 0) {%>
                    <% values.forEach(function(value) { %>
                        <li class="dropdown-item values"><%= value %></li>
                    <% }); %>
                <% } %>
            </div>
        </div>


        <div class="container">
            <div class="row">
                <% data.forEach(function(entry) { %>
                    <div class="container">
                        <div class="card" style="width: 30rem;">
                            <div class="card-body">
                                <h5 class="card-title"><%= entry["category"].title %></h5>
                                <p class="card-text">
                                    <div><span class="bold">Value: <span class="clue-value"><%= entry["value"] %></span></span></div>
                                    <div><span class="bold">Question:</span> <%= entry["question"] %></div>
                                </p>
                                <button class="btn btn-warning answerBtn">Answer</button>
                                <div class="answers"><%= entry["answer"] %></div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <script type="text/javascript" src="/js/results.js"></script>

<% include partials/footer %>